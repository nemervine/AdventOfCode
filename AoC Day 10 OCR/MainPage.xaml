<Page
    x:Class="AoC_Day_10_OCR.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AoC_Day_10_OCR"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Width="800" Height="400" RequestedTheme="Light">
    <Grid RequestedTheme="Light">
        <Image x:Name="imageOutput" HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5" VerticalAlignment="Top" Margin="0,100,0,0" Width="420" Height="80" RequestedTheme="Light"/>
        <TextBox x:Name="ocrText" HorizontalAlignment="Center" TextWrapping="Wrap" Text="ocrText" VerticalAlignment="Bottom" FontSize="16" FontWeight="Bold" Margin="0,0,0,100" RequestedTheme="Light"/>
    </Grid>
</Page>
